{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    // "module": "commonjs",
    // "target": "ESNext",
    // "lib": ["ESNext"],
    "sourceMap": true,
    "noEmit": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "allowJs": true,
    "rootDir": ".",
    "outDir": ".",
    "types": [
      "node",
      "./node_modules/tree-sitter-cli/dsl",
      "./node_modules/tree-sitter/tree-sitter"
    ],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["grammar.ts"],
  "exclude": ["examples", "bindings", "build", "node_modules"]
}
